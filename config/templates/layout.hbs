<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <meta name="description" content="{{book.description}}">
    <meta name="author" content="{{book.author}}">
    <link rel="stylesheet" href="{{#if chapter}}../assets/style.css{{else}}assets/style.css{{/if}}">
</head>
<body>
    <div class="reading-progress"></div>
    <header>
        <div class="container">
            <h1><a href="{{#if chapter}}../{{else}}./{{/if}}" style="color: white; text-decoration: none;">{{book.title}}</a></h1>
            {{#if book.subtitle}}<p>{{book.subtitle}}</p>{{/if}}
        </div>
    </header>
    
    <nav>
        <div class="container">
            <a href="{{#if chapter}}../{{else}}./{{/if}}" class="nav-brand">{{book.title}}</a>
            
            <!-- Mobile menu button -->
            <button class="mobile-menu-toggle" onclick="toggleMobileMenu()" aria-label="Toggle navigation menu">
                <span></span>
                <span></span>
                <span></span>
            </button>
            
            <!-- Main navigation -->
            <div class="nav-menu" id="nav-menu">
                <!-- Chapters dropdown for many chapters -->
                <div class="nav-dropdown">
                    <button class="nav-dropdown-toggle" onclick="toggleChaptersDropdown()" aria-label="Chapters menu">
                        <span>Chapters</span>
                        <svg class="dropdown-arrow" width="16" height="16" viewBox="0 0 16 16">
                            <path d="M8 12L3 7h10z" fill="currentColor"/>
                        </svg>
                    </button>
                    <div class="nav-dropdown-menu" id="chapters-dropdown">
                        <div class="dropdown-header">Table of Contents</div>
                        
                        <!-- Optional search for many chapters -->
                        {{#if (gt chapters.length 10)}}
                        <div class="chapters-search">
                            <input type="text" placeholder="Search chapters..." id="chapter-search" onkeyup="filterChapters(this.value)">
                        </div>
                        {{/if}}
                        
                        <div class="chapters-grid" id="chapters-grid">
                            {{#each chapters}}
                            <a href="{{#if ../chapter}}{{filename}}{{else}}chapters/{{filename}}{{/if}}" class="chapter-dropdown-item {{#if (eq ../currentChapter filename)}}active{{/if}}" data-chapter-title="{{title}}">
                                <span class="chapter-number">{{add @index 1}}</span>
                                <span class="chapter-title">{{title}}</span>
                            </a>
                            {{/each}}
                        </div>
                        
                        <!-- Quick navigation shortcuts -->
                        <div class="nav-shortcuts">
                            {{#if currentChapter}}
                            <a href="#" class="nav-shortcut" onclick="window.print()">üñ®Ô∏è Print</a>
                            {{/if}}
                        </div>
                    </div>
                </div>
                
                <!-- Quick navigation for current section -->
                {{#if currentChapter}}
                <div class="nav-current-section">
                    <span class="current-chapter-indicator">{{currentChapter}}</span>
                </div>
                {{/if}}
                
                <!-- Social Links in Nav -->
                <div class="social-links header-social-links">
                    {{#if book.social}}
                        {{#if book.social.github}}<a href="{{book.social.github}}" class="icon-only" title="GitHub Repository" target="_blank" rel="noopener noreferrer"><i class="icon">üì¶</i></a>{{/if}}
                        {{#if book.social.twitter}}<a href="https://twitter.com/{{book.social.twitter}}" class="icon-only" title="Twitter" target="_blank" rel="noopener noreferrer"><i class="icon">üê¶</i></a>{{/if}}
                        {{#if book.social.linkedin}}<a href="{{book.social.linkedin}}" class="icon-only" title="LinkedIn" target="_blank" rel="noopener noreferrer"><i class="icon">üëî</i></a>{{/if}}
                        {{#if book.social.website}}<a href="{{book.social.website}}" class="icon-only" title="Website" target="_blank" rel="noopener noreferrer"><i class="icon">üåê</i></a>{{/if}}
                    {{/if}}
                </div>
                
                <!-- Theme toggle -->
                <button class="theme-toggle" onclick="toggleTheme()" aria-label="Toggle theme"></button>
            </div>
        </div>
    </nav>
    
    <main>
        <div class="container">
            {{{content}}}
        </div>
    </main>
    
    <footer>
        <div class="container">
            <p class="text-center">&copy; {{book.date}} {{book.author}}. All rights reserved.</p>
            
            <div class="social-links footer-links centered-links">
                {{#if book.social}}
                    {{#if book.social.github}}<a href="{{book.social.github}}" title="GitHub Repository" target="_blank" rel="noopener noreferrer"><i class="icon">üì¶</i> GitHub</a>{{/if}}
                    {{#if book.social.twitter}}<a href="https://twitter.com/{{book.social.twitter}}" title="Twitter" target="_blank" rel="noopener noreferrer"><i class="icon">üê¶</i> Twitter</a>{{/if}}
                    {{#if book.social.linkedin}}<a href="{{book.social.linkedin}}" title="LinkedIn" target="_blank" rel="noopener noreferrer"><i class="icon">üëî</i> LinkedIn</a>{{/if}}
                    {{#if book.social.website}}<a href="{{book.social.website}}" title="Website" target="_blank" rel="noopener noreferrer"><i class="icon">üåê</i> Website</a>{{/if}}
                {{/if}}
            </div>
        </div>
    </footer>
    
    <script src="{{#if chapter}}../assets/features.js{{else}}assets/features.js{{/if}}"></script>
</body>
</html>